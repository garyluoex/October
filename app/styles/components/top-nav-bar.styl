.top-nav-bar {
  color: #ff;
  background-color: rgba(255, 0, 0, 0);
  overflow: hidden;
  padding: 15px 100px 15px 100px;
  position: relative;
  width: 100%;
  height: 30px;
  z-index: 100;
}

.top-nav-bar button {
  border: none;
  background-color: inherit;
   color: inherit;
   float: right;
   display: block;
   color: #f2f2f0;
   text-align: center;
   padding: 14px 16px;
   text-decoration: none;
   font: inherit;
   font-size: 17px;
   border-radius: 0px;
}

.top-nav-bar .left-link {
  float: left;
  display: block;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.top-nav-bar .right-link {
  float: right;
  display: block;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.circle {
  border-radius: 50%;
  width: 22px;
  height: 22px;
  background-color: red;
}

.top-nav-bar button:hover {
    background-color: #ddd;
    color: black;
}

.top-nav-bar .link:hover {
    background-color: #ddd;
    color: black;
}

/* Add a color to the active/current link */
.top-nav-bar .link.active {
    background-color: #4CAF50;
    color: white;
}

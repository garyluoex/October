
homepage-collection-height = 500px
homepage-collection-width = 100%

.homepage-collection
  position: relative
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  top: -(top-nav-bar-height)

  height: homepage-collection-height
  width: 100%

  background-color: lightblue
  z-index: 1000

.homepage-collection .item
  background: tomato
  width: 190px
  height: 190px

  line-height: 150px
  color: white
  font-weight: bold
  font-size: 3em

.homepage-collection .item .image
  position: relative
  height: 90px
  width: 90px
  top: 0
  left: 0
  font-size: 10px
  background-color: orange

.homepage-collection .item .title
  position: relative
  height: 50px
  width: 150px
  top: 0px
  font-size: 18px
  line-height: 50px
  background-color: orange

.homepage-collection .item hr
  width: 26px
  height: 3px
  margin-top: 28px
  margin-bottom: 9px
  border: none
  background-color: blue
  margin-left: 0
